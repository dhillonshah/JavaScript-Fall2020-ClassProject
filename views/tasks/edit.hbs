<h1>Edit Tasks Details </h1>

<form method="post">
    <fieldset class="form-group">
        <lable class="control-lable col-md-2"> Name: *</lable>
        <input name="name" id="name" required  value="{{tasks.name}}"/>
    </fieldset>
    <fieldset class="form-group">
        <lable class="control-lable col-md-2"> Complete: *</lable>
        <checkbox name="complete" id="complete" />
    </fieldset>
    <fieldset class="form-group">
        <lable class="control-lable col-md-2"> Priority: *</lable>
        <select name="priority" id="priority">
            <script>
                //refernce the seleccted element
                var priority = document.getElementById('priority')
                for (var i = 1; i <= 5; i++)
                    //create s new option inside the slect element
                    var option = document.createElement('option')
                //display the current counter as the new option txt
                option.innerHTML = i = toString()
                //if the new option mstches the task priority msrk this option as selcted
                if ({{ task.priority }} == i.toString()),
                    {
                        option.selected = true
                    }
                priority.append(option)
                }
            </script>
        </select>
    </fieldset>
    <fieldset>
        <lable class="control-lable col-md-2">Complete: </lable>
        {{#if tasks.complete}}
        <input type="checkbox" id="complete" name="complete" checked="checked"/>
        {{else}}
        <input type="checkbox" id="complete" name="complete"/>
        {{/if}}
    </fieldset>
    <input type="hidden"  name="_id" id="_id" value="{{task._id}}"/>
    <button class="col-md-offset-2 btn btn-primary">Save</button>
</form>